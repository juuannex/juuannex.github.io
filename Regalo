    /* corazones flotando */
    .heart {
      position: absolute;
      color: #ff4d6d;
      font-size: 25px;
      animation: fall 6s linear infinite;
      opacity: 0.8;
    }

    @keyframes fall {
      0% { transform: translateY(-10vh) scale(1); opacity: 1; }
      100% { transform: translateY(110vh) scale(0.5); opacity: 0; }
